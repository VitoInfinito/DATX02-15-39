<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.kandidat.datx02_15_39.tok.layout.AddDietActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:minHeight="70dp"
            android:id="@+id/gridLayout"
            android:columnCount="3"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:useDefaultMargins="true">

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:id="@+id/menu_button"
                android:layout_row="0"
                android:layout_column="0"
                android:src="@drawable/menu"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/title_add_diet"
                android:id="@+id/menu_bar_title"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="left|center_horizontal|right"
                android:textSize="20sp"
                android:gravity="center_vertical|center_horizontal"/>

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:id="@+id/button4"
                android:layout_row="0"
                android:layout_column="2"
                android:maxWidth="70dp"
                android:src="@drawable/check"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:padding="10dp"/>

        </GridLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/body_frame">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:id="@+id/button_container"
                    android:gravity="center_horizontal"
                    android:weightSum="6"
                    android:baselineAligned="false"
                    android:orientation="horizontal">


                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"/>

                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/scale_button"
                        android:maxHeight="100dp"
                        android:width="100dp"
                        android:maxWidth="100dp"
                        android:src="@drawable/scale"
                        android:scaleType="fitCenter"
                        android:background="@drawable/border_line_transparent_background"
                        android:padding="10dp"/>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"/>

                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/recipe_button"
                        android:maxHeight="100dp"
                        android:width="100dp"
                        android:maxWidth="100dp"
                        android:src="@drawable/recipegroup"
                        android:background="@drawable/border_line_transparent_background"
                        android:padding="10dp"
                        android:scaleType="fitCenter"/>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"/>

                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/barcode_button"
                        android:maxHeight="100dp"
                        android:width="100dp"
                        android:maxWidth="100dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/barcode"
                        android:background="@drawable/border_line_transparent_background"
                        android:padding="10dp"
                        android:focusable="false"/>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"/>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:id="@+id/search_container"
                    >

                    <SearchView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/searchfield"
                        android:iconifiedByDefault="false"
                        android:contentDescription="search for..."
                        android:queryHint="Search for...."/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/item_container">

                    <TableLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="100dp"
                            android:minHeight="100dp">

                        </TableRow>
                    </TableLayout>
                </FrameLayout>

            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
