<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kandidat.datx02_15_39.tok.layout.AddDietActivity">
    <!-- The main content view -->

    <RelativeLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:clickable="true">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/body_frame">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:id="@+id/search_container"
                    android:touchscreenBlocksFocus="false">

                    <SearchView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/search_field"
                        android:iconifiedByDefault="true"
                        android:queryHint="Search for...."
                        android:inputType="text"
                        android:clickable="true"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:id="@+id/button_container"
                    android:gravity="center_horizontal"
                    android:weightSum="6"
                    android:baselineAligned="false"
                    android:orientation="horizontal">


                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"/>

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/food_button"
                        android:maxHeight="100dp"
                        android:width="100dp"
                        android:maxWidth="100dp"
                        android:src="@drawable/add"
                        android:scaleType="fitCenter"
                        android:background="@drawable/border_transparent_background"
                        android:padding="10dp"
                        android:clickable="true"
                        android:onClick="onDietSelectorClick"
                        android:focusableInTouchMode="false"/>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"/>

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/scale_button"
                        android:maxHeight="100dp"
                        android:width="100dp"
                        android:maxWidth="100dp"
                        android:src="@drawable/scale"
                        android:scaleType="fitCenter"
                        android:background="@drawable/border_transparent_background"
                        android:padding="10dp"
                        android:clickable="true"
                        android:onClick="onDietSelectorClick"
                        android:focusableInTouchMode="false"/>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"/>

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/recipe_button"
                        android:maxHeight="100dp"
                        android:width="100dp"
                        android:maxWidth="100dp"
                        android:src="@drawable/recipegroup"
                        android:background="@drawable/border_transparent_background"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:clickable="true"
                        android:onClick="onDietSelectorClick"
                        android:focusableInTouchMode="false"/>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"/>

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/barcode_button"
                        android:maxHeight="100dp"
                        android:width="100dp"
                        android:maxWidth="100dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/barcode"
                        android:background="@drawable/border_transparent_background"
                        android:padding="10dp"
                        android:clickable="true"
                        android:onClick="onDietSelectorClick"
                        android:focusableInTouchMode="false"/>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"/>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/item_container">

                    <ListView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/food_search_item_container"
                        android:choiceMode="singleChoice"/>
                </FrameLayout>

            </LinearLayout>

        </FrameLayout>
    </RelativeLayout>

    <!-- The navigation drawer -->
    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#fe111111"
        android:orientation="vertical"    >

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/left_drawer_list_top"
            android:choiceMode="singleChoice"
            android:divider="#11ffffff"
            android:dividerHeight="1dp"
            android:drawSelectorOnTop="false"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:id="@+id/view_divider_1"/>

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/left_drawer_list_diary"
            android:choiceMode="singleChoice"
            android:divider="#11ffffff"
            android:dividerHeight="1dp"
            android:drawSelectorOnTop="false"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:id="@+id/view_divider_2"/>

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/left_drawer_list_setting"
            android:choiceMode="singleChoice"
            android:divider="#11ffffff"
            android:dividerHeight="1dp"
            android:drawSelectorOnTop="false"/>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
