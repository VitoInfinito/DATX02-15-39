    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:clickable="true"
        android:focusableInTouchMode="true">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/addview_body_container">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/name_date_container"
                >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/recipe_name_text_view"
                    android:textSize="35sp"
                    android:gravity="center_vertical"
                    android:singleLine="false"
                    android:textStyle="bold|italic"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:weightSum="2"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="Datum:"
                        android:id="@+id/textView2"
                        android:textSize="25sp"
                        android:gravity="center_vertical"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:text="Idag"
                        android:id="@+id/diet_choose_date_button"
                        android:background="@drawable/border_transparent_background"
                        android:onClick="onDietDateClick"
                        android:textSize="15sp"/>

                </LinearLayout>


                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Måltidstyp"
                    android:gravity="left|center_vertical"
                    android:id="@+id/meal_selector_button"
                    android:background="@drawable/combo_box_button"
                    android:paddingLeft="3dp"
                    android:textSize="15sp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="Antal portioner:"
                    android:id="@+id/textView23"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="30sp"/>

                <Button
                    android:layout_width="90dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/edit_recipe_amount_button"
                    android:background="@drawable/combo_box_button"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="10"/>
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Innehåll i ditt Recept"
                    android:id="@+id/textView"
                    android:textSize="30sp"
                    android:gravity="center_vertical"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Innehåll"
                    android:id="@+id/button7"/>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/item_container"
                android:descendantFocusability="blocksDescendants"
                android:layout_weight="1">

                <ListView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/food_item_added_container"
                    android:choiceMode="singleChoice"/>
            </FrameLayout>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Ändra"
                android:id="@+id/btn_change_recipe"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>

        </LinearLayout>

    </RelativeLayout>
