<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kandidat.datx02_15_39.tok.layout.AccountHomeActivity">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.kandidat.datx02_15_39.tok.layout.AccessoriesHomeActivity">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView4" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="453dp"
                    android:layout_alignTop="@+id/scrollView4"
                    android:layout_centerHorizontal="true">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="130dp">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:text="Uppkoppling till UP"
                            android:id="@+id/connectUPButton"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:onClick="connectUPOnClick"
                            android:nestedScrollingEnabled="false"
                            style="?android:attr/borderlessButtonStyle"
                            android:background="#ff6b0000"
                            android:textColor="#fff5f5f5"
                            android:textSize="20sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="130dp">

                        <Button
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:text="Uppkoppling till VÃ¥gen"
                            android:id="@+id/connectScaleButton"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:nestedScrollingEnabled="false"
                            android:background="#ff6b0000"
                            android:textColor="#fff5f5f5"
                            android:textSize="20sp"
                            android:onClick="connectScaleOnClick" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="130dp"></RelativeLayout>
                </LinearLayout>

            </FrameLayout>
        </ScrollView>

    </RelativeLayout>

    <!-- The navigation drawer -->
    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#fc212121"
        android:orientation="vertical"    >

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/left_drawer_list_top"
            android:choiceMode="singleChoice"
            android:divider="#11aaaaaa"
            android:dividerHeight="1dp"
            android:drawSelectorOnTop="false"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:id="@+id/view_divider_1"
            android:background="#11aaaaaa"/>

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/left_drawer_list_diary"
            android:choiceMode="singleChoice"
            android:divider="#11aaaaaa"
            android:dividerHeight="1dp"
            android:drawSelectorOnTop="false"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:id="@+id/view_divider_2"
            android:background="#11aaaaaa"/>

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/left_drawer_list_setting"
            android:choiceMode="singleChoice"
            android:divider="#11aaaaaa"
            android:dividerHeight="1dp"
            android:drawSelectorOnTop="false"
            />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
