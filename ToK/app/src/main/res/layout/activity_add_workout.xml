<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kandidat.datx02_15_39.tok.layout.AddDietActivity">
    <!-- The main content view -->

    <RelativeLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/linearLayout">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="132dp"
                    android:id="@+id/button_container"
                    android:gravity="center_horizontal"
                    android:weightSum="6"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:layout_weight="0.19">

                    <ImageButton
                        android:layout_width="115dp"
                        android:layout_height="135dp"
                        android:id="@+id/yoga_button"
                        android:maxHeight="80dp"
                        android:width="80dp"
                        android:maxWidth="100dp"
                        android:src="@drawable/yoga_icon"
                        android:scaleType="fitCenter"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/border_transparent_background"
                        android:padding="10dp"
                        android:onClick="onClickFlex"
                        android:text="@string/title_activity_add_work_out" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.98"/>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"/>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"/>

                    <ImageButton
                        android:layout_width="115dp"
                        android:layout_height="135dp"
                        android:id="@+id/sprint"
                        android:maxHeight="80dp"
                        android:width="80dp"
                        android:maxWidth="100dp"
                        android:src="@drawable/run"
                        android:scaleType="fitCenter"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/border_transparent_background"
                        android:padding="10dp"
                        android:onClick="onClickCardio"
                        android:text="@string/title_activity_add_work_out" />

                    </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.14"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Flexibilitet"
                        android:id="@+id/textView4"
                        android:layout_gravity="left|center_vertical"
                        android:textStyle="bold"
                        android:textSize="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Kondition"
                        android:id="@+id/textView6"
                        android:layout_gravity="right|center_vertical"
                        android:textStyle="bold"
                        android:textSize="25dp"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:id="@+id/button_container2"
                    android:gravity="center_horizontal"
                    android:weightSum="6"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:layout_weight="0.39">

                    <ImageButton
                        android:layout_width="115dp"
                        android:layout_height="135dp"
                        android:id="@+id/soccer"
                        android:maxHeight="80dp"
                        android:width="80dp"
                        android:maxWidth="100dp"
                        android:src="@drawable/football"
                        android:scaleType="fitCenter"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/border_transparent_background"
                        android:padding="10dp"
                        android:onClick="onClickSports"
                        android:text="@string/title_activity_add_work_out"
                        android:layout_marginLeft="0dp" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"/>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="3.08"/>

                    <ImageButton
                        android:layout_width="115dp"
                        android:layout_height="135dp"
                        android:id="@+id/tennis_button"
                        android:maxHeight="80dp"
                        android:width="80dp"
                        android:maxWidth="100dp"
                        android:src="@drawable/strength"
                        android:scaleType="fitCenter"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/border_transparent_background"
                        android:padding="10dp"
                        android:onClick="onClickStrength"
                        android:text="@string/title_activity_add_work_out" />
                    </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.09"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Sport"
                        android:id="@+id/textView8"
                        android:layout_gravity="left|center_vertical"
                        android:textStyle="bold"
                        android:textSize="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="  Styrka"
                        android:id="@+id/textView10"
                        android:layout_gravity="right|center_vertical"
                        android:textStyle="bold"
                        android:textSize="25dp"/>
                </FrameLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <!-- The navigation drawer -->
    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#fe111111"
        android:orientation="vertical"    >

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/left_drawer_list_top"
            android:choiceMode="singleChoice"
            android:divider="#11ffffff"
            android:dividerHeight="1dp"
            android:drawSelectorOnTop="false"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:id="@+id/view_divider_1"/>

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/left_drawer_list_diary"
            android:choiceMode="singleChoice"
            android:divider="#11ffffff"
            android:dividerHeight="1dp"
            android:drawSelectorOnTop="false"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:id="@+id/view_divider_2"/>

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/left_drawer_list_setting"
            android:choiceMode="singleChoice"
            android:divider="#11ffffff"
            android:dividerHeight="1dp"
            android:drawSelectorOnTop="false"/>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
