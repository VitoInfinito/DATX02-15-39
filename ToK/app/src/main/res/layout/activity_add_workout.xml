<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kandidat.datx02_15_39.tok.layout.AddDietActivity">
    <!-- The main content view -->

    <RelativeLayout
        android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/linearLayout">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:id="@+id/button_container"
                    android:gravity="center_horizontal"
                    android:weightSum="6"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"/>

                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/yoga_button"
                        android:maxHeight="100dp"
                        android:width="100dp"
                        android:maxWidth="100dp"
                        android:src="@drawable/yoga"
                        android:scaleType="fitCenter"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/border_transparent_background"
                        android:padding="10dp"
                        android:onClick="registerWorkOutOnClick"
                        android:text="@string/title_activity_add_work_out"/>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"/>

                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/bike_button"
                        android:maxHeight="100dp"
                        android:width="100dp"
                        android:maxWidth="100dp"
                        android:src="@drawable/bike"
                        android:scaleType="fitCenter"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/border_transparent_background"
                        android:padding="10dp"
                        android:onClick="registerWorkOutOnClick"/>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"/>

                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/sprint_button"
                        android:maxHeight="100dp"
                        android:width="100dp"
                        android:maxWidth="100dp"
                        android:src="@drawable/sprint"
                        android:scaleType="fitCenter"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/border_transparent_background"
                        android:padding="10dp"
                        android:onClick="registerWorkOutOnClick"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:id="@+id/button_container2"
                    android:gravity="center_horizontal"
                    android:weightSum="6"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"/>

                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/soccer_button"
                        android:maxHeight="100dp"
                        android:width="100dp"
                        android:maxWidth="100dp"
                        android:src="@drawable/soccer"
                        android:scaleType="fitCenter"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/border_transparent_background"
                        android:padding="10dp"
                        android:onClick="registerWorkOutOnClick"/>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"/>

                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/swim_button"
                        android:maxHeight="100dp"
                        android:width="100dp"
                        android:maxWidth="100dp"
                        android:src="@drawable/swim"
                        android:scaleType="fitCenter"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/border_transparent_background"
                        android:padding="10dp"
                        android:onClick="registerWorkOutOnClick"/>
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"/>

                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/tennis_button"
                        android:maxHeight="100dp"
                        android:width="100dp"
                        android:maxWidth="100dp"
                        android:src="@drawable/tennis"
                        android:scaleType="fitCenter"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/border_transparent_background"
                        android:padding="10dp"
                        android:onClick="registerWorkOutOnClick"/>
                    </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <!-- The navigation drawer -->
    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:divider="@android:color/transparent"
        android:background="@android:color/black"
        android:orientation="vertical"
        android:choiceMode="singleChoice">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/left_drawer_list_top"
            android:choiceMode="singleChoice"/>
        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/left_drawer_list_diary"
            android:choiceMode="singleChoice"/>
        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/left_drawer_list_setting"
            android:choiceMode="singleChoice"/>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
