<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:weightSum="2"
              android:id="@+id/view_meal_item_editable"
>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="80dp"
                  android:weightSum="2"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:weightSum="2"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/food_item_name"
                android:layout_weight="2"
                android:textSize="25sp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/food_item_amount"
                    android:text="MÃ¤ngd:"
                    android:gravity="left|center_vertical"
                    android:textSize="25sp"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="100"
                    android:id="@+id/btn_food_amount"
                    android:background="@drawable/combo_box_button"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="2dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="g"
                    android:id="@+id/btn_food_prefix"
                    android:background="@drawable/combo_box_button"
                    android:layout_weight="0.5"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="2dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>

                <ImageButton
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="New Button"
                    android:id="@+id/food_item_more_information"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_transparent_background"
                    android:src="@drawable/abc_spinner_mtrl_am_alpha"
                    android:tint="#ff000000"
                    android:focusableInTouchMode="false"/>

            </LinearLayout>

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/extended_food_information"
                android:focusable="false"
                android:clickable="false"
                android:focusableInTouchMode="false"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="Radera"
        android:id="@+id/button3"
        android:background="#ffff000d"/>
</LinearLayout>