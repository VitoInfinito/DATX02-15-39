<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.kandidat.datx02_15_39.tok.layout.DietHomeActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:minHeight="70dp"
            android:id="@+id/menu_bar"
            android:columnCount="3"
            android:orientation="horizontal"
            android:layout_gravity="top|left|center|right">

            <Button
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:id="@+id/menu_button"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="top|left|bottom|right"
                android:text="Meny" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/TrainingAndDiet"
                android:id="@+id/menu_bar_title"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="top|left|bottom|right"
                android:textSize="20sp"
                android:gravity="center_vertical|center_horizontal"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:id="@+id/add_activity_button"
                android:layout_row="0"
                android:layout_column="2"
                android:maxWidth="70dp"
                android:text="+" />
        </GridLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:id="@+id/body_frame">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal" />

                    </RadioGroup>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/graph_frame">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView" />
                </FrameLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:id="@+id/button3"
                        android:text="&lt;"
                        android:textSize="20sp"
                        android:background="@android:color/transparent"
                         />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Idag"
                        android:textSize="20sp"
                        android:id="@+id/textView2" />
                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text=">"
                        android:textSize="20sp"
                        android:id="@+id/button5"
                        android:background="@android:color/transparent"
                        />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nutrients_frame">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Kalorier"
                                android:id="@+id/textView3"
                                android:layout_weight="1"
                                android:gravity="center_horizontal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="2000 kcal"
                                android:id="@+id/textView4"
                                android:layout_weight="1"
                                android:layout_gravity="right"
                                android:gravity="center_horizontal" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="6"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_weight="2"
                                android:layout_width="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="Kolhydrater"
                                    android:id="@+id/textView5" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="220 g"
                                    android:id="@+id/textView6" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="Protein"
                                    android:id="@+id/textView7" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="30 g"
                                    android:id="@+id/textView8" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="Fett"
                                    android:id="@+id/textView9" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="20 g"
                                    android:id="@+id/textView10" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/diet_feed_frame"></FrameLayout>

            </LinearLayout>


        </FrameLayout>


    </LinearLayout>
</RelativeLayout>
