<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kandidat.datx02_15_39.tok.layout.AddDietActivity">
    <!-- The main content view -->

    <RelativeLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">
       <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/day_and_week_layout"
            android:layout_gravity="right|center_vertical">

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/day_radioButton"
                android:text="Visa dag"
                android:textSize="20sp"
                android:textColor="#e5e5e5"
                android:background="#4c4c4c"
                android:onClick="onDayButtonClick"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Visa vecka"
                android:textSize="20sp"
                android:id="@+id/week_radiobutton"
                android:textColor="#e5e5e5"
                android:background="#4c4c4c"
                android:layout_marginLeft="10dp"
                android:onClick="onWeekButtonClick"/>

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/workout_graph">

        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="189dp"
            android:id="@+id/workout_graph"
            android:layout_gravity="center_horizontal|top" />

        <ListView
            android:id="@+id/show_workout"
            android:layout_width="match_parent"
            android:layout_height="201dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="0dp"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_above="@+id/workout_graph"
            android:layout_below="@+id/linearLayout2"
            android:focusableInTouchMode="false">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt;"
                android:id="@+id/previousDayButton"
                android:layout_weight="1"
                android:layout_toLeftOf="@+id/textDay"
                android:background="@android:color/transparent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Idag"
                android:id="@+id/textDay"
                android:layout_weight="1"
                android:layout_centerInParent="true"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">"
                android:id="@+id/nextDayButton"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/textDay"
                android:background="@android:color/transparent"
                />
        </RelativeLayout>
    </FrameLayout>

    </RelativeLayout>

    <!-- The navigation drawer -->
    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#fe111111"
        android:orientation="vertical"    >

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/left_drawer_list_top"
            android:choiceMode="singleChoice"
            android:divider="#11ffffff"
            android:dividerHeight="1dp"
            android:drawSelectorOnTop="false"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:id="@+id/view_divider_1"/>

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/left_drawer_list_diary"
            android:choiceMode="singleChoice"
            android:divider="#11ffffff"
            android:dividerHeight="1dp"
            android:drawSelectorOnTop="false"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:id="@+id/view_divider_2"/>

        <ListView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/left_drawer_list_setting"
            android:choiceMode="singleChoice"
            android:divider="#11ffffff"
            android:dividerHeight="1dp"
            android:drawSelectorOnTop="false"

            />
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
