<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:weightSum="2"
              android:id="@+id/view_meal_item_editable"
>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:weightSum="2"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:weightSum="2"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/food_item_name"
                android:layout_weight="2"
                android:textSize="25sp"
                android:clickable="false"
                android:editable="false"
                android:enabled="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="right">

                <ImageButton
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="New Button"
                    android:id="@+id/food_item_more_information"
                    android:layout_gravity="center_vertical|right"
                    android:background="@drawable/border_transparent_background"
                    android:src="@drawable/abc_spinner_mtrl_am_alpha"
                    android:tint="#ff000000"
                    android:focusableInTouchMode="false"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/extended_food_information"
                android:focusable="false"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:orientation="vertical">
             </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="Radera"
        android:id="@+id/btn_remove_item_from_meal"
        android:background="#ffff000d"/>
</LinearLayout>