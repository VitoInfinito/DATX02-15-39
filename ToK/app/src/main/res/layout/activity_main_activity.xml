<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kandidat.datx02_15_39.tok.layout.AddDietActivity">
    <!-- The main content view -->

    <RelativeLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.kandidat.datx02_15_39.tok.layout.MainActivity">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/button2"
            android:layout_above="@+id/button"
            android:layout_alignRight="@+id/button2"
            android:layout_alignEnd="@+id/button2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/homeUsername"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="40dp" />
        </RelativeLayout>

        <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/button"
        android:background="@drawable/heart288"
        android:onClick="onWorkOutButtonClick"
        android:maxHeight="100dp"
        android:width="100dp"
        android:maxWidth="100dp"
        android:padding="15dp"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/restaurant44"
        android:id="@+id/diet_button"
        android:maxHeight="100dp"
        android:width="100dp"
        android:maxWidth="100dp"
        android:scaleType="fitCenter"
        android:padding="15dp"
        android:onClick="onDietButtonClick"
        android:layout_above="@+id/relativeLayout"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/zzz"
        android:id="@+id/button2"
        android:maxHeight="100dp"
        android:width="100dp"
        android:maxWidth="100dp"
        android:scaleType="fitCenter"
        android:onClick="onSleepButtonClick"
        android:padding="15dp"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weightButton"
            android:src="@drawable/weigth_scale"
            android:onClick="registerWeightOnClick"
            android:layout_centerInParent="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goals"
            android:id="@+id/dummyButton"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="false"
            android:onClick="goalsButtonOnClick"/>
    </RelativeLayout>

    </RelativeLayout>

    <!-- The navigation drawer -->
<LinearLayout
android:id="@+id/left_drawer"
android:layout_width="240dp"
android:layout_height="match_parent"
android:layout_gravity="start"
android:background="#fe111111"
android:orientation="vertical"    >

<ListView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/left_drawer_list_top"
    android:choiceMode="singleChoice"
    android:divider="#11ffffff"
    android:dividerHeight="1dp"
    android:drawSelectorOnTop="false"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:id="@+id/view_divider_1"/>

    <ListView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/left_drawer_list_diary"
    android:choiceMode="singleChoice"
    android:divider="#11ffffff"
    android:dividerHeight="1dp"
    android:drawSelectorOnTop="false"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:id="@+id/view_divider_2"/>

    <ListView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/left_drawer_list_setting"
    android:choiceMode="singleChoice"
    android:divider="#11ffffff"
    android:dividerHeight="1dp"
    android:drawSelectorOnTop="false"/>
</LinearLayout>

</android.support.v4.widget.DrawerLayout>
