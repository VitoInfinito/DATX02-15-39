<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.kandidat.datx02_15_39.tok.BluetoothActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="5">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button5"
            android:onClick="onUpdate"/>

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/bluetooth_list_discover"
            android:choiceMode="singleChoice"
            android:layout_weight="2"/>

        <RelativeLayout
            android:id="@+id/button_layout_bluetooth"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:id="@+id/output_bluetooth"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="50sp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kalibrera"
                android:id="@+id/calibrate_button"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tare"
                android:id="@+id/tare_button"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:onClick="onTareClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starta aktivering"
                android:id="@+id/start_update_scale"
                android:layout_above="@+id/calibrate_button"
                android:layout_alignParentStart="true"
                android:onClick="onStartClick"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avsluta Aktivering"
                android:id="@+id/end_update_scale"
                android:layout_above="@+id/tare_button"
                android:layout_alignParentEnd="true"
                android:onClick="onEndClick"/>
        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>
